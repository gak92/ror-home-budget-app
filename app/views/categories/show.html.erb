<h1> Transactions </h1>

<div class="card p-3 mt-3 mb-2 d-flex flex-row align-items-center">
  <div class="p-2">
    <%= image_tag @category.icon, height: 150, width: 150, class: "rounded" %>
  </div>

  <div class="card-heading p-2">
    <h3 class="card-title"> <%= @category.name %> </h3>
  </div>
</div>

<div class="d-flex flex-row justify-content-between p-3">
  <div>
    <%= link_to "Back", categories_path, class: "btn btn-secondary"	%>
  </div>

  <div>
    <%= link_to "Add New Transaction", new_category_payment_path(@category.id), class: "btn btn-primary"	 %>
  </div>
</div>


<ul class="list-group">
  <li class="list-group-item d-flex flex-row justify-content-between active" aria-current="true">
    <p>Total Amount</p>
    <p>$ <%= @payments.sum(:amount) %></p>
  </li>

  <% @payments.each do |payment| %>
    <li class="list-group-item d-flex flex-row justify-content-between align-items-center">
      <p><%= payment.name %></p>
      <p>$ <%= payment.amount %></p>
    </li>
  <% end %>
</ul>